#!/bin/bash
# Post-commit Hook: Updates VERSION.txt from CURRENT_VERSION in version.py

# Lese die Version aus version.py
VERSION=$(grep "CURRENT_VERSION" version.py | sed -E 's/.*CURRENT_VERSION *= *"([^"]+)".*/\1/')

# Write the version to VERSION.txt
echo "$VERSION" > VERSION.txt

# Add the updated VERSION.txt to the commit
git add VERSION.txt

echo "Updated VERSION.txt to version: $VERSION"
